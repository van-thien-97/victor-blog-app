<div class="form-group">
    <label for="title">Title</label>
    <input value="<%= article?.title %> " required type="text" name="title" id="title" class="form-control"/>
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article?.description %></textarea>
</div>
<div class="form-group">
    <label for="image">Image Uploading</label>
    <input class="form-control" type="file" accept=".png,.jpg" name="image" id="image" />
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" required id="markdown" class="form-control"><%= article?.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary mt-4">Cancel</a>
<button type="submit" class="btn btn-primary mt-4">Save</button>